s<h2 class='h2_title'>I wanna join!</h2>

<% if @error_messages %>
	<p><%= @error_messages %></p>
<% end %>

<form id='session_form' action='/signup' method='post'>
	<input type='text' placeholder='Your username' name='user[username]' required>
	<input type='email' placeholder='Your email' name='user[email]' required>
	<input type='password' placeholder='Your password(min. 6 characters)' name='password' required>
	<input type='submit' value='Join now!'>
</form>